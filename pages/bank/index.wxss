.main {
  float: left;
  width: 92%;
  margin: 0 30rpx;
}

.main .mainTop {
  float: left;
  width: 100%;
  height: 240rpx;
  position: relative;
}

.main .mainTop image {
  float: left;
  width: 100%;
  height: 240rpx;
  position: absolute;
}

.main .mainTop text {
  position: absolute;
  bottom: 10rpx;
  width: 100%;
  color: #fff;
  font-size: 22rpx;
  text-align: center;
}

.main .mainInfo {
  float: left;
  width: 100%;
  margin: 30rpx 0 0 0;
}

.main .mainInfo .input-col {
  float: left;
  width: 100%;
  min-height: 155rpx;
  margin: 0 0 30rpx 0;
}

.main .mainInfo label {
  float: left;
  width: 100%;
  font-size: 30rpx;
  color: #282828;
  font-family: Source Han Sans SC;
  font-weight: 400;
  margin: 0 0 20rpx 0;
}

.main .mainInfo input {
  float: left;
  width: 92%;
  height: 78rpx;
  background: rgba(255, 255, 255, 1);
  border: 1rpx solid rgba(217, 217, 217, 1);
  border-radius: 10rpx;
  padding: 0 30rpx;
}

.main .mainInfo .lilv {
  float: left;
  width: 33%;
}

.main .mainInfo .lilvSpan {
  float: left;
  height: 78rpx;
  line-height: 78rpx;
  margin: 0 10rpx;
}

.main .mainInfo .buchong {
  height: 230rpx;
}

.main .mainInfo .textareas {
  float: left;
  width: 100%;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  height: 150rpx !important;
  padding: 0 0 0 10rpx;
}

.main .mainInfo .picker {
  float: left;
  width: 100%;
  height: 78rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
}

.main .mainInfo .save {
  float: left;
  width: 100%;
  height: 88rpx;
  background: rgba(233, 2, 29, 1);
  border-radius: 5px;
  margin: 0 0 30rpx 0;
}

.main .mainInfo .save button {
  padding: 0;
  float: left;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0;
  background: transparent;
  color: #fff;
}

/* 融资取向 */
.rzqxList {
  width: 50% !important;
}

.rzqxLists {
  float: left;
  width: 100%;
}

.rzqxLists text {
  float: left;
  text-align: center;
  background: red;
  color: #fff;
  margin: 0 30rpx 20rpx 0;
  padding: 10rpx 30rpx;
  border-radius: 10rpx;
}

.vanPopup .van-popup {
  width: 90%;
  height: 70%;
  border-radius: 10rpx;
}

.vanPopup .van-popup image {
  float: left;
  width: 162rpx;
  height: 162rpx;
  margin: 50rpx 260rpx;
}

.vanPopup .title {
  float: left;
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  font-family: Source Han Sans SC;
  font-weight: bold;
  color: rgba(233, 2, 29, 1);
  margin: 0 0 100rpx 0;
}

.vanPopup .bankName {
  float: left;
  width: 92%;
  height: 237rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 2px 15px 0px rgba(233, 237, 244, 1);
  border-radius: 30px;
  margin: 0 30rpx;
  text-align: center;
}

.vanPopup .bankName text {
  float: left;
  width: 100%;
  font-size: 30rpx;
  font-family: Source Han Sans SC;
  font-weight: 400;
  color: rgba(136, 136, 136, 1);
  margin: 50rpx 0 40rpx 0;
}

.vanPopup .bankName text:last-child {
  color: #E9021D;
  margin: 0;
}